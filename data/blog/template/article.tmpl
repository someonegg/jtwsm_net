{{/* This file is combined with the root.tmpl to display a single article. */}}

{{define "title"}}{{.Doc.Title}} - 某某人{{end}}
{{define "content"}}
	{{template "doc" .Doc}}
	{{with .Doc.Related}}
		<h1>Related articles</h1>
		<ul>
		{{range .}}
			<li><a href="{{.Path}}">{{.Title}}</a></li>
		{{end}}
		</ul>
	{{end}}
{{end}}

